<div class ="container">
  <div class="panel panel-info">
   <div class="panel-heading">Tweets(<%= @tweets.length %>)</div>
    
    <div class="panel-body">
      <table class="table table-bordered">
        <thead >
          <tr>
            <th>Message</th>
            <th>User</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @tweets.each do |tweet| %>
            <tr>
              <td><%= tweet.message %></td>
              <td><%= tweet.user_id %></td>
              <td><%= link_to 'Show', tweet %></td>
              <% if tweet.user_id == current_user.id || current_user.role.title == 'admin'%>
                <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
               
              <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% else %>
              <td></td>
              <td></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>  

  </div>
  <%= link_to 'New Tweet', new_tweet_path,class:"btn btn-primary btn-cons" %>
</div>  

